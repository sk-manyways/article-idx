{
  "manifest_version": 3,
  "name": "article-idx",
  "version": "1.0",
  "description": "Create an AI-generated Index at the top of your articles, to get an overview, and easily navigate an article.",
  "options_page": "options.html",
  "permissions": ["storage"],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  }
}

